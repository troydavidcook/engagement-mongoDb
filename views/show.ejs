<% include ./partials/header %>

    <div class="row">
        <div class="ui four column grid">
            <div class="eight wide column">
                <div class="ui container segment">
                    <img class="ui centered medium bordered image huge" src="<%= image.url%>" alt="">
                    <h3>Log in To Leave a Comment!</h3>
                    <hr class="style-two">
                </div>
            </div>

            <% if (!currentUser) { %>
                <div class="four wide right floated column right-form">
                        <div class="ui container segment form">
                            <form class="ui form signup" action="/signup" method=POST>
                                <div class="field">
                                    <input class="ui input small" type="text" name="username" placeholder="username">
                                </div>
                                <div class="field">
                                    <input type="password" name="password" placeholder="password">
                                </div>
                                <button type ="submit" class="ui teal basic button mini signup">Signup</button>
                            </form>
        
                            <form class="ui form" action="/login" method="POST">
                                <div class="field">
                                    <input type="text" name="username" placeholder="username">
                                </div>
                                <div class="field">
                                    <input class="ui transparent input mini" type="password" name="password" placeholder="password">
                                </div>
                                <button type="submit" class="ui teal basic button mini">Login</button>
                            </form>
                        </div>
                    </div>   
            <% } else { %>
                <div class="four wide right floated column right-form">
                        <div class="ui container segment form">
                            <form class="ui form" action="/login" method="POST">
                                <div class="field">
                                    <textarea name="comment" id="" cols="20" rows="10"></textarea>
                                </div>
                                <button type="submit" class="ui teal basic button mini">Leave Comment</button>
                            </form>
                        </div>
                    </div>
            <% } %>

             
        </div>
    </div>    
    

    <% include ./partials/footer %>




    <!-- Working on if there's a current user for showing the form! -->